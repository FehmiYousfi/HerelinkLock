<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent" android:fillViewport="true"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:padding="8.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:id="@id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="0.0dip" android:text="Freq" />
            <Spinner android:id="@id/freq" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Choose a frequency" android:inputType="text" />
            <TextView android:id="@id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="DL BW" />
            <Spinner android:id="@id/DL" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <TextView android:id="@id/textView3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="UL BW" />
            <Spinner android:id="@id/UL" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <TextView android:id="@id/textView4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Hopping" />
            <Switch android:id="@id/hoppingswitch" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <TextView android:id="@id/textView44" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tx Ant" />
            <Spinner android:id="@id/sw_txant" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textOn="Left" android:textOff="Right" android:text="TX Ant" android:layout_weight="1.0" />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <Button android:id="@id/pair" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Pair" />
            <Button android:id="@id/getstate" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Get State" />
            <Button android:id="@id/freqAuto" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Freq Scan" />
            <Button android:id="@id/freqrest" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Freq Reset" />
            <Switch android:id="@id/sw_dynpower" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Dyn Power" android:layout_weight="1.0" />
            <Switch android:id="@id/sw_adptbw" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Adaptive BW" android:layout_weight="1.0" />
        </LinearLayout>
        <TextView android:id="@id/label" android:layout_width="fill_parent" android:layout_height="wrap_content" />
        <com.github.mikephil.charting.charts.LineChart android:id="@id/plot" android:layout_width="fill_parent" android:layout_height="fill_parent" />
    </LinearLayout>
</ScrollView>